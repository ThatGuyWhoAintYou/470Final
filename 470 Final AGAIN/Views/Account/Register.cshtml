@model _470_Final_AGAIN.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
<link href="http://designers.hubspot.com/hs-fs/hub/327485/file-2054199286-css/font-awesome.css" rel="stylesheet">
<link href="~/Content/regstyle.css" rel="stylesheet" />
<link href="~/Content/form-elements.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
<!-- Top content -->
<div class="top-content">
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1 style="color:#B71C1C;"> Tell us a bit about yourself</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">

                    <fieldset id="firstform" style="display:block;">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Step 1 / 3</h3>
                                <p style="color:#B71C1C;">Basic Information </p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-user"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <div class="form-group">
                                <label class="sr-only" for="form-first-name">First name</label>
                                <input type="text" name="form-first-name" placeholder="First name..." class="form-first-name form-control" id="form-first-name">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-last-name">Last name</label>
                                <input type="text" name="form-last-name" placeholder="Last name..." class="form-last-name form-control" id="form-last-name">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-last-name">Last name</label>
                                <input type="text" name="form-last-name" placeholder="Email." class="form-last-name form-control" id="form-last-name">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-last-name">Last name</label>
                                <input type="text" name="form-last-name" placeholder="Password" class="form-last-name form-control" id="form-last-name">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-last-name">Last name</label>
                                <input type="text" name="form-last-name" placeholder="Confirm Password" class="form-last-name form-control" id="form-last-name">
                            </div>

                            <button type="button" class="btn btn-next" id="first">
                                Next
                            </button>
                        </div>
                    </fieldset>

                    <fieldset id="secondform" style="display:none;">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Step 2 / 3</h3>
                                <p style="color:#B71C1C;">Select the dish that you would  prefer</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-cutlery"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <button type="button" class="btn btn-previous" id="second">Previous</button>
                            <button type="button" class="btn btn-next" id="third">Next</button>
                        </div>
                    </fieldset>

                    <fieldset id="thirdform" style="display:none;">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Step 3 / 3</h3>
                                <p style="color:#B71C1C;">Select the dish that you would not prefer</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-cutlery"></i>
                            </div>
                        </div>
                        <div class="form-bottom">

                            <button type="button" class="btn btn-previous" id="first">Previous</button>
                            <button type="button" class="btn" id="four">Join our World!</button>
                        </div>
                    </fieldset>



                </div>
            </div>
        </div>
    </div>
</div>
<script>

    $("#first").click(function () {
        $("#secondform").show();
        $("#thirdform").hide();
        $("#firstform").hide();
    });

    $("#second").click(function () {

        $("#firstform").show();
        $("#thirdform").hide();
        $("#secondform").hide();
    });

    $("#third").click(function () {
        $("#firstform").hide();
        $("#secondform").hide();
        $("#thirdform").show();
    });

    $("#four").click(function () {
        window.location = '/Home';
    });


</script>
